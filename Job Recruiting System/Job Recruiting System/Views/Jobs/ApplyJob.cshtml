@model Job_Recruiting_System.Models.ApplyJobViewModel

@{
    ViewData["Title"] = "Apply for a Job";
}

<style>
    .label {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0px 0px 5px 0px;
    }

    .container_applyjob {
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .applyjob_form {
        background: rgb(250,250,250);
        width: 500px;
        box-shadow: 0px 0px 5px gray;
        border-radius: 20px;
        padding: 20px;
    }

    .applyjob_button {
        width: 80%;
        font-size: 1.5rem;
        font-weight: bold;
        margin: 8px 0px 0px 0px;
    }
</style>

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Job Seeker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Back Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("Policy", "Jobs")">Site Policy</a>
                    </li>

                    @if (Context.Session.GetString("UserEmail") == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Sign In</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Profile" asp-action="Index">
                                @Context.Session.GetString("UserEmail")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container_applyjob">
    <div class="applyjob_form">
        <div style="width:100%;text-align:center;">
            <h1>Apply for a Job</h1>
        </div>

        <form asp-action="ApplyJob" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-2">
                <label class="label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="John Smith" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label class="label">Field / Profession</label>
                <input asp-for="Field" class="form-control" placeholder="Software Engineer" />
                <span asp-validation-for="Field" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label class="label">CV</label>
                <textarea asp-for="CV" class="form-control" rows="5" placeholder="Education, Experience, Skills..."></textarea>
                <span asp-validation-for="CV" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mt-2 applyjob_button">Apply</button>
        </form>
    </div>
</div>



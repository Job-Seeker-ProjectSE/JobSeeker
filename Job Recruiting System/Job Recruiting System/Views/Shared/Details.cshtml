@model Job_Recruiting_System.Models.Job

<style>
    .container_postjob {
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .postjob_form {
        background: rgb(250,250,250);
        width: 800px;
        box-shadow: 0px 0px 5px gray;
        border-radius: 20px;
        padding: 20px;
    }

    .details_title{
        font-size:2.5rem;
        font-weight:bold;
    }
    .detail_label{
        font-size:1.2rem;
        font-weight:bold;
    }

    .details_date{
        color:gray;
        font-size:1rem;
    }
    .details_button{
        width:100%;
        display:flex;
        align-items: center;
        justify-content: center;
        gap:40px;
    }

    .detail_btn{
        width:200px;
        font-size:1.5rem;
    }
</style>
<div class="container_postjob">
    <div class="postjob_form">
<div class="container mt-4">
    <h1 class="details_title">@Model.Title</h1>
    <p class="detail_label"><strong>Company:</strong> @Model.Company</p>
            <p class="detail_label"><strong>Location:</strong> @Model.Location</p>
    <p>@Model.Description</p>
    <small class="details_date">Last Updated: @Model.UpdatedAt.ToLongDateString()</small>
    <div class="details_button">
    <a href="@Url.Action("Index", "Jobs")" style="background:gray;" class="btn btn-primary mt-3 detail_btn">Back to Jobs</a>
                <a asp-controller="Jobs"
                   asp-action="ApplyJob"
                   class="btn btn-primary mt-3 detail_btn"
                    style="background:green;">
                    Apply
                </a>

                
 
            </div>
</div>
    </div>
</div>
